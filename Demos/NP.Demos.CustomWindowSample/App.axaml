<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="NP.Demos.CustomWindowSample.App"             
             xmlns:local="clr-namespace:NP.Demos.CustomWindowSample"
             xmlns:np="https://np.com/visuals">
	<Application.Styles>
		<SimpleTheme/>
		<!--<StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml"/>
		<StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml"/>-->
		<StyleInclude Source="avares://NP.Avalonia.Visuals/Themes/CustomWindowStyles.axaml"/>
		<Style Selector="Button.MyWindowButton">
			<Setter Property="Foreground"
					Value="Red"/>
			<Setter Property="VerticalContentAlignment"
					Value="Center"/>
		</Style>
		<Style Selector="Path.MyMenuIcon">
			<Setter Property="Fill"
					Value="Red"/>
		</Style>
	</Application.Styles>
</Application>
