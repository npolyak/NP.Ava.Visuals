<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NP.TradesGridDemo"
        xmlns:np="https://np.com/visuals"
        x:Class="NP.TradesGridDemo.MainWindow"
        Title="NP.TradesGridDemo"
        x:Name="Root" 
		Width="600"
		Height="600"
		Background="{StaticResource PrimaryBrush}">
	<DataGrid ItemsSource="{Binding ResultTrades}"
			  AutoGenerateColumns="False"
			  Background="Transparent"
			  RowBackground="Transparent">
		<DataGrid.Columns>
			<DataGridTextColumn Header="Symbol" 
								Binding="{Binding TheSymbol}"/>
			<DataGridTextColumn Header="Total Trade Price"
								Binding="{Binding TotalTradePrice, StringFormat='\{0:##\}'}"/>
		</DataGrid.Columns>
		
	</DataGrid>
</Window>
